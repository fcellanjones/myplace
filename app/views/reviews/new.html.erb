<div class="container" style="height: 100vh;width: 500px">
  <div class="form-container">
    <h2>Review this space</h2>
    <div class="form-inputs">
      <%= simple_form_for [ @workspace, @review ] do |f| %>
      <%= f.input :content, placeholder: "Write your review", class:"label-review" %>
      <%= f.input :rating,
                  collection: [1, 2, 3, 4, 5], placeholder: "Rate this between 1 and 5" %>
    <div class="form-actions">
      <%= f.submit "Submit review", class: "btn btn-warning" %>
    </div>
  </div>
  <% end %>
  </div>
</div>
