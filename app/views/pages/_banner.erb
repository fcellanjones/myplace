<div class="home-banner">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1595846519845-68e298c2edd8?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="First slide">
      <div class="taglines">
        <h2>Build a work community close to home</h2>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1585634917202-6f03b28fc6d0?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MjB8fGhvbWUlMjBvZmZpY2V8ZW58MHx8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=60" alt="Second slide">
      <div class="taglines">
        <h2 id="flow">Find your creative flow</h2>
      </div>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="https://images.unsplash.com/photo-1584703619328-39ea3128e0b5?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1050&q=80" alt="Third slide">
      <div class="taglines">
        <h2 id="better">Work better not longer</h2>
      </div>
    </div>
  </div>
    <div class="text-search">
      <div class="banner-text">
        <h3>Find a workspace in your local area</h3>
      </div>
      <div class="index-form form-inline justify-content-center">
        <div class="search-form">
          <%= simple_form_for :index_search, url: workspaces_path, method: :get do |f| %>
            <div class="form-line">
              <%= f.input :search_city, class: "form-control rounded-left", placeholder: "Area or Postcode", label: false %>
              <%= f.input :search_distance, class: "form-control", placeholder: "Km radius", label: false  %>
             <%= f.submit "Search", class: "btn btn-warning"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
