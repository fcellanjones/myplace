<div class="booking-card">
  <% @favorites.each do |favorite| %>
    <div class="workspace-card">
      <img src="https://images.unsplash.com/photo-1519974719765-e6559eac2575?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxzZWFyY2h8MTAyfHxob21lJTIwb2ZmaWNlfGVufDB8fDB8&auto=format&fit=crop&w=500&q=60" alt="airy desk in bedroom">
      <h3 class="booking-name"><%= favorite.workspace.name %></h3>
      <div class="links">
        <%= link_to "See workspace", workspace_path(favorite.workspace), class: "booking-button"%>
      </div>
      <div class="address">
       <%= fa_icon "map" %><h4><%= favorite.workspace.city %> </h4>
      </div>
    </div>
  <% end %>
</div>
